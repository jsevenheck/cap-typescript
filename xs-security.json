{
  "xsappname": "cap-typescript-hr",
  "tenant-mode": "dedicated",
  "scopes": [
    {
      "name": "HRAdmin",
      "description": "Full access to all client data"
    },
    {
      "name": "HREditor",
      "description": "Read/write access to assigned companies"
    },
    {
      "name": "HRViewer",
      "description": "Read-only access to assigned companies"
    }
  ],
  "role-templates": [
    {
      "name": "HRAdmin",
      "description": "Full access to all client data",
      "scope-references": ["HRAdmin"]
    },
    {
      "name": "HREditor",
      "description": "Read/write access to assigned companies",
      "scope-references": ["HREditor"]
    },
    {
      "name": "HRViewer",
      "description": "Read-only access to assigned companies",
      "scope-references": ["HRViewer"]
    }
  ],
  "role-collections": [
    {
      "name": "HR_Admin",
      "description": "Administrators with full access",
      "role-template-references": ["$XSAPPNAME.HRAdmin"]
    },
    {
      "name": "HR_Editor",
      "description": "Editors with update access for assigned companies",
      "role-template-references": ["$XSAPPNAME.HREditor"]
    },
    {
      "name": "HR_Viewer",
      "description": "View-only access for assigned companies",
      "role-template-references": ["$XSAPPNAME.HRViewer"]
    }
  ]
}
