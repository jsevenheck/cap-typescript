{
  "xsappname": "hr-cap",
  "tenant-mode": "dedicated",
  "scopes": [
    { "name": "$XSAPPNAME.ClientViewer", "description": "Read client master data" },
    { "name": "$XSAPPNAME.ClientEditor", "description": "Maintain client master data" }
  ],
  "role-templates": [
    {
      "name": "ClientViewer",
      "description": "Read access",
      "scope-references": ["$XSAPPNAME.ClientViewer"]
    },
    {
      "name": "ClientEditor",
      "description": "Create/Update/Delete access",
      "scope-references": ["$XSAPPNAME.ClientViewer", "$XSAPPNAME.ClientEditor"]
    }
  ]
}
