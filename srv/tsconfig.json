{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "types": ["node", "@cap-js/cds-types"],
    "baseUrl": "./",
    "paths": {
      "@types/*": ["types/*"]
    },
    "typeRoots": ["../types", "../node_modules", "../node_modules/@types", "./node_modules/@types"]
  },
  "include": [
    "./**/*.ts",
    "../db/**/*.cds",
    "../types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "test"
  ]
}
