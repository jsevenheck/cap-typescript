{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "types": ["@sap__cds", "@sap__cds__apis", "node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@types/*": ["types/*"],
      "@sap/cds": ["../types/@sap__cds"],
      "@sap/cds/apis": ["../types/@sap__cds__apis"]
    },
    "typeRoots": ["../types", "../node_modules/@types", "./node_modules/@types"]
  },
  "include": [
    "./**/*.ts",
    "../db/**/*.cds",
    "../types/**/*.d.ts"
  ],
  "exclude": [
    "dist"
  ]
}
