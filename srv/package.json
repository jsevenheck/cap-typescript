{
  "name": "@acme/cap-srv",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run ams:generate && tsc --project tsconfig.json",
    "watch": "npm run ams:generate && concurrently \"tsc --project tsconfig.json --watch --preserveWatchOutput\" \"cross-env TS_NODE_TRANSPILE_ONLY=1 NODE_OPTIONS=--require=ts-node/register cds watch\"",
    "start": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=1 NODE_OPTIONS=--require=ts-node/register cds-serve",
    "lint": "eslint \"**/*.ts\"",
    "test": "cross-env TS_NODE_TRANSPILE_ONLY=1 jest --runInBand",
    "ams:generate": "node ./scripts/generate-ams.mjs"
  },
  "dependencies": {
    "@sap-cloud-sdk/connectivity": "^3.23.0",
    "@sap-cloud-sdk/http-client": "^3.23.0",
    "@sap/ams": "^3",
    "@sap/audit-logging": "^5.8.1",
    "@sap/cds": "^9.4.0",
    "@sap/logging": "^8.2.0",
    "@sap/xsenv": "^5.3.0",
    "axios": "^1.6.0",
    "cockatiel": "^3.2.1",
    "cross-env": "^7.0.3",
    "node-cron": "^3.0.3",
    "p-limit": "^5.0.0",
    "prom-client": "^15.1.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0.4.0",
    "@cap-js/sqlite": "^2.0.3",
    "@eslint/eslintrc": "^3.1.0",
    "@sap/ams-dev": "^2",
    "@sap/cds-dk": "^9.4.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.6.3"
  },
  "cds": {
    "odata": {
      "urlPath": "/odata/v4"
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "filename": "../db/sqlite.db"
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "dev": {
            "password": "dev",
            "roles": [
              "HRViewer",
              "HREditor",
              "HRAdmin"
            ],
            "attributes": {
              "companyCodes": [
                "COMP-001",
                "COMP-002"
              ],
              "CompanyCode": [
                "COMP-001",
                "COMP-002"
              ]
            }
          },
          "hrviewer": {
            "password": "hrviewer",
            "roles": [
              "HRViewer"
            ],
            "attributes": {
              "companyCodes": [
                "COMP-001"
              ],
              "CompanyCode": [
                "COMP-001"
              ]
            }
          },
          "hreditor": {
            "password": "hreditor",
            "roles": [
              "HREditor"
            ],
            "attributes": {
              "companyCodes": [
                "COMP-001"
              ],
              "CompanyCode": [
                "COMP-001"
              ]
            }
          }
        }
      },
      "ams": {
        "kind": "ams-local",
        "credentials": {
          "dclRoot": "ams",
          "dcnRoot": "gen/ams/dcn",
          "dclGenerationPackage": "cap",
          "generateDcl": true,
          "generatePoliciesDeployer": false
        }
      }
    },
    "[production]": {
      "requires": {
        "auth": {
          "kind": "ias"
        },
        "ams": {
          "kind": "authorization",
          "vcap": {
            "label": "authorization",
            "service": "authorization",
            "plan": "application"
          }
        }
      }
    },
    "[test]": {
      "requires": {
        "db": {
          "kind": "sqlite",
          "credentials": {
            "filename": "../db/test.db"
          }
        },
        "ams": false
      }
    }
  }
}
