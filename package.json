              ],
              "CompanyCode": [
                "COMP-001",
                "COMP-002"
              ]
            }
          },
          "hrviewer": {
            "password": "hrviewer",
            "roles": [
              "HRViewer"
            ],
            "attributes": {
              "companyCodes": [
                "COMP-001"
              ],
              "CompanyCode": [
                "COMP-001"
              ]
            }
          },
          "hreditor": {
            "password": "hreditor",
            "roles": [
              "HREditor"
            ],
            "attributes": {
              "companyCodes": [
                "COMP-001"
              ],
              "CompanyCode": [
                "COMP-001"
              ]
            }
          }
        }
      },
      "ams": {
        "kind": "authorization",
        "vcap": {
          "label": "authorization",
          "service": "authorization",
          "plan": "application"
        },
        "credentials": {
          "dclRoot": "srv/ams",
          "dcnRoot": "srv/gen/ams/dcn",
          "dclGenerationPackage": "cap",
          "generateDcl": true,
          "generatePoliciesDeployer": false
        }
      }
    },
    "serve": {
      "static": [
        {
          "path": "/",
          "directory": "app/hr-admin/dist"
        }
      ]
    },
    "odata": {
      "urlPath": "/odata/v4"
    },
    "[production]": {
      "requires": {
        "auth": {
          "kind": "ias"
        }
      }
    },
