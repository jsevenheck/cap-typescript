{
  "name": "cap-typescript",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "srv",
    "app/hr-admin"
  ],
  "scripts": {
    "dev": "concurrently \"npm run watch --workspace srv\" \"npm run dev --workspace app/hr-admin\"",
    "build": "npm run build --workspace srv && npm run build --workspace app/hr-admin",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm run test --workspace srv",
    "test:frontend": "playwright test",
    "lint": "npm run lint --workspace srv",
    "start": "npm run build && npm run start:runtime",
    "start:runtime": "npm run start --workspace srv"
  },
  "devDependencies": {
    "@sap/ams": "^3",
    "@playwright/test": "^1.49.1",
    "concurrently": "^9.0.1",
    "typescript": "^5.6.3"
  },
  "cds": {
    "features": {
      "typescript": true
    },
    "security": {
      "identity": {
        "enabled": true
      },
      "xsuaa": {
        "enabled": false
      }
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "sqlite.db"
        }
      },
      "auth": {
        "kind": "mocked",
        "credentials": {
          "users": {
            "dev": {
              "password": "dev",
              "roles": [
                "HRViewer",
                "HREditor",
                "HRAdmin"
              ],
              "attributes": {
                "companyCodes": [
                  "COMP-001",
                  "COMP-002"
                ],
                "CompanyCode": [
                  "COMP-001",
                  "COMP-002"
                ]
              }
            },
            "hrviewer": {
              "password": "hrviewer",
              "roles": [
                "HRViewer"
              ],
              "attributes": {
                "companyCodes": [
                  "COMP-001"
                ],
                "CompanyCode": [
                  "COMP-001"
                ]
              }
            },
            "hreditor": {
              "password": "hreditor",
              "roles": [
                "HREditor"
              ],
              "attributes": {
                "companyCodes": [
                  "COMP-001"
                ],
                "CompanyCode": [
                  "COMP-001"
                ]
              }
            }
