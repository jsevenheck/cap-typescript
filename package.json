{
  "name": "cap-typescript",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "srv",
    "app/hr-admin"
  ],
  "scripts": {
    "dev": "concurrently \"npm run watch --workspace srv\" \"npm run dev --workspace app/hr-admin\"",
    "build": "npm run build --workspace srv && npm run build --workspace app/hr-admin",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm run test --workspace srv",
    "test:frontend": "playwright test",
    "lint": "npm run lint --workspace srv",
    "start": "npm run build && npm run start:runtime",
    "start:runtime": "npm run start --workspace srv",
    "deploy": "cds deploy --to sqlite:db/sqlite.db",
    "deploy:clean": "rm -f db/*.db && npm run deploy",
    "dev:fresh": "npm run deploy:clean && npm run dev"
  },
  "engines": {
    "node": ">=20.0.0 <23.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@sap/ams": "^3",
    "concurrently": "^9.0.1",
    "cross-env": "^10.1.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@cap-js/hana": "^2",
    "@ui5/cli": "^4.0.30",
    "dotenv": "^17.2.3"
  },
  "overrides": {
    "axios": "^1.13.2",
    "follow-redirects": "^1.15.11",
    "form-data": "4.0.4",
    "js-yaml": "4.1.1",
    "tar": "7.5.2",
    "tmp": "0.2.4"
  },
  "cds": {
    "server": {
      "body_parser": {
        "limit": "1mb"
      }
    },
    "features": {
      "typescript": true
    },
    "security": {
      "identity": {
        "enabled": true
      },
      "xsuaa": {
        "enabled": false
      }
    },
    "requires": {
      "db": {
        "kind": "hana"
      },
      "ams": {
        "kind": "ams-local",
        "credentials": {
          "dclRoot": "srv/ams",
          "dcnRoot": "srv/gen/ams/dcn",
          "dclGenerationPackage": "cap",
          "generateDcl": true,
          "generatePoliciesDeployer": false
        }
      }
    },
    "serve": {
      "static": [
        {
          "path": "/",
          "directory": "app/hr-admin/dist"
        }
      ]
    },
    "odata": {
      "urlPath": "/odata/v4"
    },
    "employeeNotifications": {
      "employeeCreatedDestination": "employee-service-destination"
    },
    "[development]": {
      "requires": {
        "db": {
          "kind": "sqlite",
          "credentials": {
            "filename": "./db/sqlite.db"
          }
        },
        "auth": {
          "kind": "mocked",
          "users": {
            "dev": {
              "password": "dev",
              "roles": [
                "HRViewer",
                "HREditor",
                "HRAdmin"
              ],
              "attributes": {
                "companyCodes": [
                  "COMP-001",
                  "COMP-002"
                ],
                "CompanyCode": [
                  "COMP-001",
                  "COMP-002"
                ]
              }
            },
            "hrviewer": {
              "password": "hrviewer",
              "roles": [
                "HRViewer"
              ],
              "attributes": {
                "companyCodes": [
                  "COMP-001"
                ],
                "CompanyCode": [
                  "COMP-001"
                ]
              }
            },
            "hreditor": {
              "password": "hreditor",
              "roles": [
                "HREditor"
              ],
              "attributes": {
                "companyCodes": [
                  "COMP-001"
                ],
                "CompanyCode": [
                  "COMP-001"
                ]
              }
            }
          }
        }
      }
    },
    "[production]": {
      "requires": {
        "auth": {
          "kind": "ias"
        },
        "ams": {
          "kind": "authorization",
          "vcap": {
            "label": "authorization",
            "service": "authorization",
            "plan": "application"
          }
        }
      }
    },
    "[test]": {
      "requires": {
        "db": {
          "kind": "sqlite",
          "credentials": {
            "filename": "./db/test.db"
          }
        },
        "auth": {
          "kind": "mocked",
          "users": {
            "dev": {
              "password": "dev",
              "roles": [
                "HRViewer",
                "HREditor",
                "HRAdmin"
              ],
              "attributes": {
                "companyCodes": [
                  "COMP-001",
                  "COMP-002"
                ],
                "CompanyCode": [
                  "COMP-001",
                  "COMP-002"
                ]
              }
            },
            "hrviewer": {
              "password": "hrviewer",
              "roles": [
                "HRViewer"
              ],
              "attributes": {
                "companyCodes": [
                  "COMP-001"
                ],
                "CompanyCode": [
                  "COMP-001"
                ]
              }
            },
            "hreditor": {
              "password": "hreditor",
              "roles": [
                "HREditor"
              ],
              "attributes": {
                "companyCodes": [
                  "COMP-001"
                ],
                "CompanyCode": [
                  "COMP-001"
                ]
              }
            }
          }
        },
        "ams": false
      }
    }
  }
}
