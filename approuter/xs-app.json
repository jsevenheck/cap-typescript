{
  "welcomeFile": "/index.html",
  "authenticationMethod": "route",
  "sessionTimeout": 60,
  "routes": [
    {
      "source": "^/odata/v4/(.*)$",
      "target": "/odata/v4/$1",
      "destination": "backend",
      "authenticationType": "xsuaa",
      "csrfProtection": true
    },
    {
      "source": "^/api/(.*)$",
      "target": "/api/$1",
      "destination": "backend",
      "authenticationType": "xsuaa"
    },
    {
      "source": "^/app/hr-admin/(.*)$",
      "target": "$1",
      "service": "html5-apps-repo-rt",
      "authenticationType": "xsuaa"
    },
    {
      "source": "^/resources/(.*)$",
      "target": "/resources/$1",
      "authenticationType": "none",
      "cacheControl": "public, max-age=86400"
    },
    {
      "source": "^(.*)$",
      "target": "$1",
      "service": "html5-apps-repo-rt",
      "authenticationType": "xsuaa"
    }
  ],
  "compression": {
    "enabled": true,
    "minSize": 2048
  },
  "responseHeaders": [
    {
      "name": "X-Frame-Options",
      "value": "SAMEORIGIN"
    },
    {
      "name": "X-Content-Type-Options",
      "value": "nosniff"
    }
  ]
}