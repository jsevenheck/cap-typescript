{
  "_version": "2.0.0",
  "sap.app": {
    "id": "hr.admin",
    "type": "application",
    "title": "{{appTitle}}",
    "i18n": {
      "bundleUrl": "i18n/i18n.properties",
      "supportedLocales": [""],
      "fallbackLocale": ""
    },
    "applicationVersion": { "version": "1.0.0" },
    "dataSources": {
      "mainService": {
        "uri": "/odata/v4/clients/",
        "type": "OData",
        "settings": { "odataVersion": "4.0" }
      }
    }
  },
  "sap.ui": {
    "technology": "UI5",
    "deviceTypes": { "desktop": true, "tablet": true, "phone": true }
  },
  "sap.ui5": {
    "rootView": { "viewName": "hr.admin.view.app.Main", "type": "XML" },
    "dependencies": {
      "minUI5Version": "1.136.0",
      "libs": {
        "sap.ui.core": {},
        "sap.m": {}
      }
    },
    "resources": {
      "css": [
        {
          "uri": "css/style.css"
        }
      ]
    },
    "resourceRoots": {
      "ui": "./controller",
      "views": "./view"
    },
    "contentDensities": { "compact": true, "cozy": true },
    "models": {
      "": {
        "dataSource": "mainService",
        "type": "sap.ui.model.odata.v4.ODataModel",
        "settings": {
          "operationMode": "Server",
          "autoExpandSelect": true,
          "earlyRequests": true,
          "updateGroupId": "$auto",
          "groupProperties": {
            "read": {
              "submit": "Auto"
            }
          }
        },
        "preload": true
      },
      "i18n": {
        "type": "sap.ui.model.resource.ResourceModel",
        "settings": {
          "bundleUrl": "i18n/i18n.properties",
          "supportedLocales": [""],
          "fallbackLocale": ""
        }
      }
    },
    "routing": {
      "config": {
        "routerClass": "sap.m.routing.Router",
        "type": "View",
        "viewType": "XML",
        "path": "hr.admin.view.app",
        "controlId": "app",
        "controlAggregation": "pages",
        "transition": "slide",
        "bypassed": {
          "target": "notFound"
        }
      },
      "routes": [
        {
          "name": "clients",
          "pattern": "",
          "target": "clients"
        },
        {
          "name": "employees",
          "pattern": "clients/{clientId}/employees",
          "target": "employees"
        },
        {
          "name": "costCenters",
          "pattern": "clients/{clientId}/costcenters",
          "target": "costCenters"
        },
        {
          "name": "locations",
          "pattern": "clients/{clientId}/locations",
          "target": "locations"
        }
      ],
      "targets": {
        "clients": {
          "id": "mainPage",
          "name": "Main",
          "level": 1
        },
        "employees": {
          "id": "employeesPage",
          "name": "Main",
          "level": 2
        },
        "costCenters": {
          "id": "costCentersPage",
          "name": "Main",
          "level": 2
        },
        "locations": {
          "id": "locationsPage",
          "name": "Main",
          "level": 2
        },
        "notFound": {
          "id": "notFoundPage",
          "name": "NotFound",
          "level": 1
        }
      }
    }
  }
}
